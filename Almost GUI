package javafxapplication1;
import javafxapplication1.alert;
import javafx.application.Application;
import javafx.event.ActionEvent;
import javafx.event.EventHandler;
import javafx.event.EventType;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.layout.StackPane;
import javafx.stage.Stage;
import javafx.scene.layout.VBox;
import javafx.scene.control.Label;
import javafx.geometry.*;
import javafx.scene.control.TextField;

public class JavaFXApplication1 extends Application 
{
    Button btn = new Button();
    Stage window;
    Scene scene1,scene2,scene3;
     public static void main(String[] args) 
    {
        launch(args);
    }    
      
    
    @Override
    public void start(Stage primaryStage) throws Exception {
   window=primaryStage;
   TextField nameInput1=new TextField();
    TextField nameInput2=new TextField();
    TextField nameInput3=new TextField();
    TextField nameInput4=new TextField();
    TextField nameInput5=new TextField();
     
      Label label1=new Label("Enter The number of Nodes : ");
      Label label2=new Label("Enter The number of Edges : ");
       Label label3=new Label("Enter The first Node : ");
      Label label4=new Label("Enter The Second Node : ");
      Label label5=new Label("Enter The weight : ");
     Button btn1=new Button("Clear");
       Button btn2=new Button("Clear");
        Button btn3=new Button("Next");
        Button btn4=new Button("Clear");
       Button btn5=new Button("Clear");
       Button btn6=new Button("Clear");
        Button btn7=new Button("Next");
        Button btn8=new Button("add/update edge ");
        Button btn9=new Button("Delete Edge");
        Button btn10=new Button("Clear Graph");
        Button btn11=new Button("Display Graph");
        Button btn12=new Button("Calculate shortest path between 2 nodes");
        Button btn13=new Button("Display childeren of Nodes");
        Button btn14=new Button("Check If the graph is totslly connected");
        Button btn15=new Button("Exit");
        
        
       
      VBox layout1=new VBox(20);
       VBox layout3=new VBox(20);
     // layout1.getChildren().addAll(label1,btn1);
      layout1.setPadding(new Insets(20,20,20,20));
       layout1.getChildren().addAll(label1,nameInput1,btn1,label2,nameInput2,btn2,btn3);
      
      scene1=new Scene(layout1,500,400);
    // btn1.setOnAction(e-> window.setScene(scene2));
      btn3.setOnAction(e -> window.setScene(scene2));
      btn1.setOnAction(e -> nameInput1.clear());
       btn2.setOnAction(e -> nameInput2.clear());
        btn4.setOnAction(e -> nameInput3.clear());
         btn5.setOnAction(e -> nameInput4.clear());
          btn6.setOnAction(e -> nameInput5.clear());
           btn7.setOnAction(e -> window.setScene(scene3));
         
      Button btn_b = new Button("Back");
      btn_b.setOnAction(e-> window.setScene(scene1));
      VBox layout2=new VBox(20);
     
      scene2= new Scene(layout2,600,600);
      layout2.setPadding(new Insets(20,20,20,20));
    layout2.getChildren().addAll(label3,nameInput3,btn4,label4,nameInput4,btn5,label5,nameInput5,btn6,btn7,btn_b);
      scene3=new Scene(layout3,600,600);
      
      
     layout3.getChildren().addAll(btn8,btn9,btn10,btn11,btn12,btn13,btn14,btn15);
      
      //btn 
      
      window.setScene(scene1);
      window.setTitle("Graph Program");
      window.show();
      
    
      
      
//        btn.setText("Click on me'");
